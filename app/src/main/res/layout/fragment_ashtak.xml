<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ui.ashtak.AshtakFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@mipmap/hanuman"
        android:theme="@android:style/Theme.DeviceDefault.Wallpaper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:autoText="false"
            android:breakStrategy="high_quality"
            android:elegantTextHeight="true"
            android:ellipsize="marquee"
            android:enabled="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@string/abc_action_bar_home_description"
            android:lineSpacingExtra="8sp"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="paddedBounds"
            android:padding="@dimen/activity_horizontal_margin"
            android:singleLine="false"
            android:text="@string/hanumanashtakvalue"
            android:textAlignment="center"
            android:textColor="@color/abc_primary_text_material_light"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:visibility="visible" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>